.container
  cf()
  width: auto
  margin: 1em 0.5em
  +size($smallScreen)
    width: 750px
    margin: 1em auto
  +size($mediumScreen)
    width: 970px
    margin: 1em auto
  +size($largeScreen)
    width: 1170px
    margin: 1em auto
  &.movie-container
    margin 0 auto
    max-width: 700px
    padding: 250px 10px 90px 10px
    +size($smallScreen)
      padding: 250px 0px 90px 0px
